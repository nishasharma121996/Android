<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.nisha.myfirstapplication.MainActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditText"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_toRightOf="@+id/nameTextView"
        android:layout_marginLeft="120dp"

        />
    <TextView
        android:id="@+id/passwordTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/passwordEditText"
       />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/passwordEditText"
         android:inputType="textPassword"
         android:layout_marginLeft="120dp"
         android:layout_alignLeft="@+id/passwordTextView"
         android:layout_toRightOf="@+id/passwordTextView"
         android:layout_below="@+id/nameEditText"
         />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="10sp"
        android:layout_below="@+id/passwordTextView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"

        />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/submitButton"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"

        />
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        />
</RelativeLayout>
